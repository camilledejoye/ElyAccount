{
    "commit-msg": {
        "enabled": true,
        "actions": [
            {
                "action": "\\SebastianFeldmann\\CaptainHook\\Hook\\Message\\Action\\Beams",
                "options": {
                    "subjectLength": 50,
                    "bodyLineLength": 72
                }
            }
        ]
    },
    "pre-commit": {
        "enabled": true,
        "actions": [
            {
                "action": "\\SebastianFeldmann\\CaptainHook\\Hook\\Composer\\Action\\CheckLockFile",
                "options": []
            },
            {
                "action": "\\SebastianFeldmann\\CaptainHook\\Hook\\PHP\\Action\\Linting",
                "options": []
            },
            {
                "action": "phpunit --colors=always",
                "options": []
            },
            {
                "action": "phpcs --colors --standard=PSR2 --ignore=vendor/,var/,.git/ .",
                "options": []
            }
        ]
    },
    "pre-push": {
        "enabled": false,
        "actions": []
    }
}
